<Window x:Class="CheckWork.ChooseDir"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckWork"
        mc:Ignorable="d"
        Title="Choose Directory" Height="204.222" Width="300">
    <Grid Background="#FFE5E5E5">
        <GroupBox x:Name="groupBox" Header="New Directory" HorizontalAlignment="Left" Margin="20,21,0,0" VerticalAlignment="Top" Height="108" Width="249" BorderBrush="Black"/>
        <TextBox x:Name="FileTB" HorizontalAlignment="Left" Height="23" Margin="39,88,0,0" TextWrapping="Wrap" Text="Browse .txt File" VerticalAlignment="Top" Width="120" Foreground="#FFC5C5C5" IsEnabled="False"/>
        <Button x:Name="OpenBtn" Content="Open" HorizontalAlignment="Left" Margin="164,88,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="OpenBtn_Click"/>
        <Label x:Name="label" HorizontalAlignment="Left" Margin="101,35,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Choosing new directory :" Margin="39,45,98,90"/>

    </Grid>
</Window>
